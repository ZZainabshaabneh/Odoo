<odoo>
    <record id="sk_location_tree_view" model="ir.ui.view">
        <field name="name">sk.location</field>
        <field name="model">sk_location</field>   
        <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="district"/>
             <field name="city"/>
            </tree>
        </field>
    </record>    
    
    <record id="sk_location_form_view" model="ir.ui.view">
        <field name="name">sk.location</field>
        <field name="model">sk_location</field>   
        <field name="arch" type="xml">
            <form>
                <group>  
               <group>  
                <field name="name"/>
               <field name="district"/>
               <field name="city"/>
                </group>
               </group> 
            </form>
        </field>
    </record>    
    
<record id="sk_location_action" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="res_model">sk_location</field>   
        <field name="view_mode">tree,form</field>
    </record>    
     
    

    
</odoo>